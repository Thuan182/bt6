<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/nen"
    android:gravity="center"
    tools:context=".MainActivity2">
    <TextView
        android:textColor="#ff63"
        android:textSize="40dp"
        android:text=" Login Now"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text=" Please login to continue using our app"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text=" Enter with Social Networks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginRight="20dp"
            android:src="@drawable/h61"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <ImageView
            android:src="@drawable/h62"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

    </LinearLayout>
    <TextView
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text=" Login with email"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etuser"
            android:hint=" Gmail"
            android:layout_width="200dp"
            android:layout_height="40dp"/>
        <EditText
            android:id="@+id/etpw"
            android:inputType="textPassword"
            android:hint=" Password"
            android:layout_width="200dp"
            android:layout_height="40dp"/>
    </LinearLayout>
    <TextView
        android:layout_gravity="right"
        android:text="fagor Password "
        android:layout_width="150dp"
        android:layout_height="30dp"/>
    <Button
        android:id="@+id/btlognin"
        android:background="@drawable/button"
        android:textColor="#ffff"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Logn in"
        android:layout_width="150dp"
        android:layout_height="50dp"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:layout_marginRight="10dp"
            android:text="Coun't have as account"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#ff63"
            android:text="Login"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</LinearLayout>