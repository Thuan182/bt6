<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/nen"
    tools:context=".MainActivity">

    <TextView
        android:textColor="@color/colorPrimary"
        android:textSize="40dp"
        android:text=" Welcome"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text=" Please login or sign up to continue using our app"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/h6"/>
    <TextView
        android:textColor="#00CD00"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="Enter with social Networks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginRight="20dp"
            android:src="@drawable/h61"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <ImageView
            android:src="@drawable/h62"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

    </LinearLayout>
    <TextView
        android:textColor="#000"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text=" Login with email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:background="#00CD00"
        android:textColor="#000"
        android:id="@+id/buttonsignup"
        android:layout_marginTop="10dp"
        android:text="Sign Up"
        android:layout_width="150dp"
        android:layout_height="40dp"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#00CD00"
            android:layout_marginRight="10dp"
            android:text="You already have an account?"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/colorPrimary"
            android:text="Login"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>